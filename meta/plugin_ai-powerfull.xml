<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <!-- Basic Plugin Info -->
  <name>AI-PowerFull</name>
  <name lang="ar">AI-PowerFull</name>
  <description>AI-powered subtitle translation and voice dubbing</description>
  <description lang="ar">ترجمة ودبلجة الذكاء الاصطناعي</description>
  
  <!-- Version Control -->
  <version>1.0.0</version>
  <author>YourName</author>
  <author-mail>your@email.com</author-mail>
  <author-url>https://yourwebsite.com</author-url>
  <license>GPLv3</license>

  <!-- System Requirements -->
  <requirements>
    <enigma2 minversion="4.0" />
    <python minversion="3.8" />
    <package name="python3-requests" minversion="2.25.1"/>
    <package name="python3-langdetect" minversion="1.0.9"/>
  </requirements>

  <!-- Supported Enigma2 Images -->
  <supportedimages>
    <image>egami</image>
    <image>openatv</image>
    <image>openpli</image>
  </supportedimages>

  <!-- Minimum Image Versions -->
  <supportedimageversions>
    <image name="egami" minversion="10.6" />
    <image name="openatv" minversion="7.5" />
    <image name="openpli" minversion="8.0" />
  </supportedimageversions>

  <!-- Package Info -->
  <packagename>enigma2-plugin-extensions-ai-powerfull</packagename>
  <packagetype>extension</packagetype>

  <!-- Plugin Components -->
  <components>
    <component type="plugin">Extensions/AI-PowerFull</component>
  </components>

  <!-- Tags for Discovery -->
  <tags>
    <tag>subtitle</tag>
    <tag>translation</tag>
    <tag>AI</tag>
    <tag>arabic</tag>
    <tag>dubbing</tag>
  </tags>

  <!-- Screenshots (Optional) -->
  <screenshot url="https://yourwebsite.com/screenshots/preview1.png" />
  <screenshot url="https://yourwebsite.com/screenshots/preview2.png" />

  <!-- Changelog -->
  <changelog>
    <version number="1.0.0">
      <change>Initial release</change>
      <change>Supports OpenAI and LibreTranslate</change>
    </version>
  </changelog>
</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<skin>
  <!-- Main Settings Screen -->
  <screen name="AIPowerFullSetup" position="center,center" size="1200,700" title="AI-PowerFull Settings">
    <ePixmap position="0,0" size="1200,700" pixmap="skin/images/background.png" zPosition="-1"/>
    
    <widget source="Title" render="Label" position="60,40" size="1080,60" font="Regular;40" transparent="1"/>
    
    <widget name="config" position="60,120" size="1080,480" scrollbarMode="showOnDemand" transparent="1"/>
    
    <ePixmap position="360,620" size="200,50" pixmap="skin/images/button_red.png" zPosition="1"/>
    <ePixmap position="600,620" size="200,50" pixmap="skin/images/button_green.png" zPosition="1"/>
    
    <widget source="key_red" render="Label" position="360,620" size="200,50" zPosition="2" font="Regular;30" halign="center" valign="center" transparent="1"/>
    <widget source="key_green" render="Label" position="600,620" size="200,50" zPosition="2" font="Regular;30" halign="center" valign="center" transparent="1"/>
  </screen>

  <!-- Translation Preview Screen -->
  <screen name="AIPowerFullPreview" position="center,center" size="1280,720" title="Translation Preview">
    <widget source="original_text" render="Label" position="100,200" size="1080,120" font="Regular;32" halign="center" valign="center"/>
    <widget source="translated_text" render="Label" position="100,400" size="1080,120" font="Regular;32" halign="center" valign="center" foregroundColor="#00FF00"/>
  </screen>
</skin>
